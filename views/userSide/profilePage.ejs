      text-shadow: 2px 2px 3px black;
      padding: 0 0 0 .3rem;
      border-radius: 5px;
    }

    .referral_code::-webkit-outer-spin-button,
    .referral_code::-webkit-inner-spin-button {
      -webkit-appearance: none;
    }

    .referral_code_genarator {
      flex: 0 0 50%;
      padding: 2rem 0 0 2rem;

    }

    .referral_input_div {
      .code_apply_btn {
        align-items: center;
        appearance: none;
