                <p class="validation_error">Enter valid code</p>
              </div>
              <script>
                function limitInputLength(input, maxLength) {
                  if (input.value.length > maxLength) {
                    input.value = input.value.slice(0, maxLength);
                  }
                }
              </script>
              <button class="code_apply_btn" onclick="applyCode()">APPLY</button>
            </div>
            <div class="referral_code_genarator">
              <p class="referral_create" onclick="createCode()">invite friends</p>

            </div>

          </div>


          <div class="user_referral_div" style="display:none ; ">
            <p class="okay_msg" style="color: rgb(175, 248, 175);"><span class="amout_div"></span><i class="fa fa-inr" aria-hidden="true"></i> credited in your wallet</p>
            <p class="refferal_p_text">
              Invite friends to Zesugar Pistors with referral code and get 504<i class="fa fa-inr" aria-hidden="true"></i>. They get 204<i class="fa fa-inr" aria-hidden="true"></i>
            </p>
            <p class="referral_code_db" style="top:5rem;"><span style="color: #aeaeae; user-select: none;">referral code </span>&nbsp;<span class="codeFetch_div"></span><img class="copy_img_tag" src="/image2/copy.png" alt="" onclick="copyToClipboard('<%=userData.referral_code%>')"></p>


          </div>
          <% } %>

        </div>

      </div>

    </div>

    <script>
      function createCode() {
        fetch('/referralCode')
          .then(response => {
            if (!response.ok) {
              throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
          })
          .then(data => {
            if (data.status) {
              window.location.reload()
            }
          })
          .catch(e => {
            console.log('There has been a problem with your fetch operation: ' + e.message);
          });

      }

      function applyCode() {
        document.querySelector(".referral_code").addEventListener("input", () => {
          document.querySelector(".validation_error").style.display = "none";

        })
        const code = parseInt(document.querySelector(".referral_code").value);
        if (!code) {
          document.querySelector(".validation_error").style.display = "block";
          return false;
        }
        fetch('/referralCode', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              code: code
            })
          })
          .then(response => {
            if (!response.ok) {
              throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
          })
          .then(data => {
            if (data.status) {
              document.querySelector(".user_referral_div").style.display = "block";
             document.querySelector(".new_user_referral").style.display = "none";
             document.querySelector(".amout_div").textContent = data.amount;
             document.querySelector(".codeFetch_div").textContent = data.referralCode;


            } else {
              document.querySelector(".validation_error").style.display = "block";

            }
          })
          .catch(e => {
            console.log('There has been a problem with your fetch operation: ' + e.message);
          });


      }
    </script>

    <!--        copy of id  -->
    <script>
      function copyToClipboard(orderID) {
        navigator.clipboard.writeText(orderID).then(function() {
          console.log('Order ID copied to clipboard');
        }).catch(function(err) {
          console.error('Could not copy text: ', err);
        });
      }
    </script>
    <!-- __________________ -->


    <script>
      document.querySelector(".address_btn").addEventListener("click", () => {
        document.querySelector(".profile_data").style.display = "none"
        document.querySelector(".address_data").style.display = "block"

      })
      document.querySelector(".profile_btn").addEventListener("click", () => {
        document.querySelector(".profile_data").style.display = "block"
        document.querySelector(".address_data").style.display = "none"

      })
    </script>




