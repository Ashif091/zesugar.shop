        padding-left: 8px;
        padding-right: 8px;
        font-size: 16px;
        margin: 0 0 0 .5rem;

        justify-content: center;
        line-height: 1;
        list-style: none;
        overflow: hidden;

        position: relative;
        text-align: left;
        text-decoration: none;
        transition: box-shadow .15s, transform .15s;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
        will-change: box-shadow, transform;

