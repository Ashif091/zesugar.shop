  <style>
    .Wishlist_btn {
      background: rgb(213, 106, 137);
      background: linear-gradient(90deg, rgb(200, 92, 123) 0%, rgb(249, 249, 249) 100%);

      p {
        color: rgb(189, 43, 84);
        font-weight: 700;
      }
    }


    /* CSS */
    .shop_now_btn {
      padding: 15px 30px;
      text-align: center;
      text-transform: uppercase;
      transition: 0.5s;
      background-size: 200% auto;
      color: white;
      border-radius: 10px;
      display: block;
      border: 0px;
      font-weight: 700;
      box-shadow: 0px 0px 14px -7px #f09819;
      background-image: linear-gradient(45deg, #FF512F 0%, #F09819 51%, #FF512F 100%);
      cursor: pointer;
      user-select: none;
      -webkit-user-select: none;
      touch-action: manipulation;
    }

    .shop_now_btn:hover {
      background-position: right center;
      /* change the direction of the change here */
      color: #fff;
      text-decoration: none;
    }

    .shop_now_btn:active {
      transform: scale(0.95);
    }

    .single_product_display_div {
      width: 100%;
      border-radius: 8px;
      min-height: 80px;
      background: rgb(238, 197, 209);
      background: linear-gradient(90deg, rgb(185, 91, 119) 0%, rgb(230, 166, 178) 100%);
      border: 2px solid #fcd1e9;
      margin-top: 1rem;

      display: flex;
      align-items: stretch;

    }
    .product_img_div{
        width: 70px;
        height: 70px;
        margin:.7rem 0 0 0;
        object-fit: contain;
        position: relative;
        cursor: pointer;
        user-select:none;
        flex: 0 0 15%;
        padding:0 0 0 1rem;
      cursor: pointer;


    }
    .product_name_div{
        flex: 0 0 40%;
        margin-left: 0;
    }
    .product_action_div{
        flex: 0 0 45%;
        position: relative;
    }
    .nameAndPrice_p_tag{
        color: #fff;
        user-select: none;
        text-shadow:2px 2px 3px black;
        text-transform: capitalize;
      cursor: pointer;

    }
    .product_description_p_tag{
        color: #fff;
        user-select: none;
        font-size:13px;
        text-shadow:2px 2px 3px black;
        text-transform: capitalize;
        margin:-1rem 0  0 0;
      cursor: pointer;

    }
    .delete_form_wishlist{
   width:15px;
   margin:.5rem 0 0 80%;
   cursor: pointer;
   position: absolute;
   right: 1rem;
   top: .5rem;
   display: none;
}

.single_product_display_div:hover .delete_form_wishlist{
   display: block;
}

  </style>


