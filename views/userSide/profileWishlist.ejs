<body style=" background: rgb(72, 20, 44);" id="body">
  <div class="all-content">
    <!-- navbar -->
    <%-include("../partials/nav_bar") %>

    <!-- navbar end -->


    <div class="main_div">
      <div class="left_bar">
        <div class="action_div">
          <a href="/getprofile">
            <div class="form_div profile_btn">
              <p>Profile</p>
            </div>
          </a>
          <a href="/getprofile_wallet">
            <div class="form_div">
              <p>Wallet</p>
            </div>
          </a>
          <a href="/getprofile_address">
            <div class="form_div address_btn">
              <p>Address</p>
            </div>
          </a>
          <a href="/getprofile_order">
            <div class="form_div order_btn">
              <p>Orders</p>
            </div>
          </a>
          <a href="/myWishlist">
            <div class="form_div Wishlist_btn">
              <p>Wishlist</p>
            </div>
          </a>
        </div>

      </div>
      <div class="right_bar">
        <div class="vertical_line"></div>
        <!-- profile data -->
        <% if(!userWishlist || userWishlist.items.length === 0){ %>
        <div class="data_display_div_order" style="user-select: none; min-height:400px;">
          <p class="text_msg" style="margin: 8rem 0 0 9rem; font-size: 23px; color: #fff; text-shadow:3px 3px 6px black; text-transform: capitalize;"> Your Wishlist is currently empty!</p>
          <a href="/"><button class="shop_now_btn" style="margin: 1rem 0 0 15rem ; text-transform: capitalize;">start exploring</button></a>
        </div>
        <% }else{ %>
        <div class="data_display_div_order wishlist_main">
          <% userWishlist.items.forEach(product => {%>

          <div class="single_product_display_div single_product_display_div<%= product.product._id %>" >
            <div class="product_img_div" onclick="productDetailPage('<%= product.product._id %>')">
                <img src="/<%=product.product.product_image_url[0]%>" width="70px" alt="" style="border:1px solid #fff; border-radius: 4px;">
            </div>
            <div class="product_name_div" onclick="productDetailPage('<%= product.product._id %>')">
                <p class="nameAndPrice_p_tag"><%=product.product.product_name%>&nbsp;<strong><%=product.product.product_price%>,DHS</strong></p>
                <p class="product_description_p_tag"><%=product.product.product_description%></p>
            </div>
            <div class="product_action_div">
                <img src="/image2/delete.png" alt="" class="delete_form_wishlist" onclick="removeProduct('<%= product.product._id %>')">
            </div>
          </div>



          <% }) %>

        </div>

        <div class="data_display_div_order wishlist_sub" style="user-select: none; min-height:400px; display: none;">
            <p class="text_msg" style="margin: 8rem 0 0 9rem; font-size: 23px; color: #fff; text-shadow:3px 3px 6px black; text-transform: capitalize;"> Your Wishlist is currently empty!</p>
            <a href="/"><button class="shop_now_btn" style="margin: 1rem 0 0 15rem ; text-transform: capitalize;">start exploring</button></a>
          </div>
        <% } %>

      </div>

    </div>





    <!-- footer -->
    <%-include("../partials/footer.ejs")%>
    <!-- ======= -->


  </div>


  <!-- ====ERROR PoP UP==== -->
  <div class="errormsg" style="display: none;">
    Fail to connect database check your network !
  </div>

  <!-- ==================== -->

