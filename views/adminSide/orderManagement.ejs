<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styleadpage.css">
  <link rel="shortcut icon" type="image" href="/image/logo.png">
  <title>admin page</title>
  <!-- bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!--  -->
  <!-- Import bootstrap cdn -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <!-- Import jquery cdn -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous">
  </script>
  <!--  -->
  <style>
    .single_user_order_div {
      width: 90%;
      min-height: 70px;
      margin: 1rem 0 0 0;
      color: #fff;
      position: relative;

      border-radius: 12px;
      border: 1px solid rgb(68, 30, 30);
      background-color: rgb(151, 126, 126);
      box-shadow: 5px 5px 10px black;
      display: flex;
      justify-content: space-between;

    }

    .single_user_order_div:hover {
      background-color: rgb(113, 88, 88);
    }

    .box {
      width: 90%;
    }

    .rotate_new {
      position: absolute;
      top: 0;
      left: 0;
      transform: rotate(-45deg);
      user-select: none;
    }

    .animate-charcter {
      text-transform: uppercase;
      background-image: linear-gradient(-225deg,
          #fbcde6 0%,
          #962746 29%,
          #ee4f84 67%,
          #fff800 100%);
      background-size: auto auto;
      background-clip: border-box;
      background-size: 200% auto;
      color: #fff;
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: textclip 2s linear infinite;
      display: inline-block;
    }

    @keyframes textclip {
      to {
        background-position: 200% center;
      }
    }

    .order_details {
      flex: 0 0 35%;
      padding: 1rem 0 0 2rem;
      max-width: 14rem;
      word-wrap: break-word;
      font-size: 13px;
    }

    .username_p_tag {
      font-size: 16px;
      font-weight: 600;
    }

    .orderid_p_tag {
      margin-top: -.8rem;
      cursor: pointer;
    }

    .orderItem_count_p_tag {
      margin-top: -.8rem;
      color: #fffff5;
    }

    .order_price_status {
      flex: 0 0 20%;
      align-items: center;
      text-align: center;
      margin: 2rem 0 0 0;

    }

    .order_action_div {
      flex: 0 0 40%;
      display: flex;
      position: relative;

    }

    .order_status {
      display: flex;
      margin: 2rem 0 0 1rem;
      text-transform: capitalize;
    }

    .order_status_text {
      display: flex;
      text-transform: capitalize;
    }

    .status_circle {
      width: 16px;
      height: 16px;
      border: 3px solid red;
      border-radius: 50%;
      margin: 5px 2px 0 0;
    }

    .img_up_arrow {
      margin: 2rem 0 0 .5rem;
      height: 25px;
      cursor: pointer;
    }

    .img_detail_page {
      width: 40px;
      height: 60px;
      position: absolute;
      cursor: pointer;
      opacity: 0;
      transition: opacity 0.2s ease-in-out;
      right: 1rem;
      top: 1.2rem;
    }

    .single_user_order_div:hover .img_detail_page {
      opacity: 1;
    }

    .new_orders {
      position: absolute;
      right: 1rem;
      top: 1rem;
      font-size: 18px;
      color: #fff;
    }

    .scrollable-content {
      position: relative;
    }

    .button {
      width: 100%;
      padding: 6px;
      margin-bottom: 5px;
      text-align: center;
      background-color: rgb(136, 118, 118);
      color: #fff;
      border: none;
      cursor: pointer;
      text-shadow: 2px 2px 3px black;
      box-shadow: 4px 4px 5px black;
      transition: background-color, .3s;
    }

    .search_input_div {
      position: relative;
    }

    .search_options {
      position: absolute;
      width: 100%;
      min-height: 0px;
      background-color: #962746;
      top: 2.2rem;
      left: 0rem;
      border: 2px solid rgb(62, 30, 30);
      background-color: rgba(100, 91, 91, 0.852);
      color: #fff;
      border-top: none;
      font-size: 14px;
      padding: 0 0 1rem 1rem;
      border-bottom-left-radius: 14px;
      border-bottom-right-radius: 14px;
      display: none;


    }

    .option_search:hover {
      cursor: pointer;
      background-color: rgb(100, 91, 91);
      text-shadow: 2px 2px 3px black;
    }

    #search-input:focus {
      border-bottom-left-radius: 0px;
      border-bottom-right-radius: 0px;
      border-top-left-radius: 14px;
      border-top-right-radius: 14px;
      border-bottom: none;

    }
  </style>


</head>

<body>
  <div class="container_main ">
    <!-- left bar  -->
    <div class="sidebar">
      <!-- Your sidebar content goes here -->

      <div class="profile_bar">
        <form class="circle" action="/logout" method="get">
          <img src="/image2/admin.png" alt="Profile Image">
          <p class="admintag">admin </p>
          <button id="logoutbtn" type="submit"><img width="20px" src="/image2/logout.png" alt="logout"></button>
        </form>
      </div>
      <a href="/admin/adminDashboard"><button id="toggleButton button" class="button action_usermanagement" style=" background-color: rgb(98, 77, 77);">Dashboard</button></a>
      <a href="/admin/usermanagement"><button id="toggleButton button" class="button action_usermanagement" style=" background-color: rgb(98, 77, 77);">Users</button></a>
      <a href="/admin/productmangement"><button class="button" style=" background-color: rgb(98, 77, 77);">Products</button></a>
      <a href="/admin/categorymanagement"><button class="button" style=" background-color: rgb(98, 77, 77);">Categorys</button></a>
      <a href="/admin/ordermanagement"><button class="button" style=" background-color: rgb(69, 45, 45);">Orders</button></a>
      <a href="/admin/offermanagement/product"><button class="button" style=" background-color: rgb(98, 77, 77);">Offers</button></a>
      <a href="/admin/couponmanagement"><button class="button" style=" background-color: rgb(98, 77, 77);">Coupons</button></a>


    </div>
    <!--  -->


    <form class="search-bar" action="" method="get">
      <h1>Orders</h1>
      <div class="search_input_div">
        <input type="text" name="key" id="search-input" autocomplete="off" placeholder="Search for status or id...">
        <div id="options" class="search_options">
          <div class="option_search" onclick="setOption('Delivered')">Delivered</div>
          <div class="option_search" onclick="setOption('Refund')">Refund</div>
          <div class="option_search" onclick="setOption('Return')">Return</div>
          <div class="option_search" onclick="setOption('Cancelled')">Cancelled</div>
          <div class="option_search" onclick="setOption('Out For Delivery')">Out For Delivery</div>
          <div class="option_search" onclick="setOption('Shipped')">Shipped</div>
          <div class="option_search" onclick="setOption('pending')">pending</div>
        </div>
      </div>




      <!-- Options -->


      <button type="submit" id="search-button">
        <img src="/image2/search.png" width="30px" alt="Search Icon">
      </button>
    </form>


    <script>
      document.querySelector('#search-input').addEventListener('input', function(e) {
        let inputValue = e.target.value;
        let capitalizedInputValue = inputValue.charAt(0).toUpperCase() + inputValue.slice(1);
        let options = document.querySelectorAll('.option_search');
        for (let i = 0; i < options.length; i++) {
          let optionText = options[i].textContent;
          if (optionText.startsWith(capitalizedInputValue)) {
            options[i].style.display = 'block';
          } else {
            options[i].style.display = 'none';
          }
        }
      });

      document.querySelector('#search-input').addEventListener('focus', function() {

        document.querySelector('.search_options').style.display = 'block';

      });

      function setOption(optionText) {
        var inputField = document.getElementById('search-input');
        inputField.value = optionText;
        document.querySelector('.search_options').style.display = 'none';

      }

      document.querySelector('.search-bar').addEventListener('submit', function(e) {
        e.preventDefault();
        let searchData = document.querySelector('#search-input').value;
        let url = `/admin/ordermanagement?page=${'<%= previousPage %>'}&searchData=${searchData}`;
        window.location.href = url;
      });
      document.querySelector('#search-input').value = '<%= searchData %>'
    </script>

    <!-- Your scrollable content goes here -->

    <div class="scrollable-content">
      <!--  -->
      <!--  -->
      <p class="new_orders">New Orders:- <strong class="new_order_count"><%=totalCheckedOrders%></strong></p>
      <div class="box">
        <% orderData.forEach(order=> { %>
        <div class="single_user_order_div">
          <% if(order.check_status===true){ %>
          <div class="rotate_new animate-charcter rotate_new<%=order._id%>">NEW</div>
          <% }else{ %>
          <div class="rotate_new animate-charcter rotate_new<%=order._id%>" style="display: none;">NEW</div>
          <% } %>
          <!-- Details -->
          <div class="order_details">
            <p class="username_p_tag"><%=order.userId.name%></p>
            <p class="orderid_p_tag">
              <span id="orderID" onclick="copyToClipboard()"><%=order._id%></span>
            </p>

            <p class="orderItem_count_p_tag"> <strong><%=order.items.length%> </strong>Items &nbsp; <%=new Date(order.orderDate).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %></p>

          </div>

          <!-- Price Status -->
          <div class="order_price_status">
            <%= order.balance_amount %>
          </div>
          <!-- Action -->
          <div class="order_action_div">
            <%if(order.status=='pending'){%>
            <div class="order_status ">
              <div class="status_circle status_circle<%=order._id%> " style="border-color:rgb(255, 192, 76);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(255, 192, 76);"><%=order.status%></p>
            </div>
            <img class="img_up_arrow img_up_arrow<%=order._id%>" onclick="statusUpdate('<%=order._id%>')" src="/image2/up-arrow.png" width="25px" alt="">
            <% }else if(order.status=='Shipped'){ %>
            <div class="order_status ">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(196, 238, 133);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(196, 238, 133);"><%=order.status%></p>
            </div>
            <img class="img_up_arrow img_up_arrow<%=order._id%>" onclick="statusUpdate('<%=order._id%>')" src="/image2/up-arrow.png" width="25px" alt="">
            <% }else if(order.status=='Out For Delivery'){ %>
            <div class="order_status ">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(171, 220, 88);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(171, 220, 88);"><%=order.status%></p>
            </div>
            <img class="img_up_arrow img_up_arrow<%=order._id%>" onclick="statusUpdate('<%=order._id%>')" src="/image2/up-arrow.png" width="25px" alt="">
            <% }else if(order.status=='Delivered'){ %>
            <div class="order_status">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(82, 197, 114);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(82, 197, 114);"><%=order.status%></p>
            </div>
            <% }else if(order.status=='Refund'){ %>
            <div class="order_status">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(82, 197, 114);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(82, 197, 114);"><%=order.status%></p>
            </div>
            <% }else if(order.status=='Return'){ %>
            <div class="order_status">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(249, 187, 71);"></div>
              <p class="order_status_text<%=order._id%>" style="color:rgb(239, 185, 84);"><%=order.status%> <span <% if(order.paymentStatus==='Successful'){ %> style="color:#57c746;" <% }else if(order.paymentStatus==='Processing'){ %>style="color:rgb(255, 192, 76);" <% }else{ %> style="color: rgb(188, 3, 3);" <% } %>>(<%=order.paymentStatus%>)</span></p>
            </div>

            <% }else { %>
            <div class="order_status order_status<%=order._id%>" style="color:rgb(148, 0, 0);">
              <div class="status_circle status_circle<%=order._id%>" style="border-color:rgb(188, 3, 3);"></div><%=order.status%>
            </div>
            <% } %>



            <img src="/image2/next.png" alt="" class="img_detail_page" onclick="orderdetails('<%=order._id%>')">
          </div>
        </div>




        <%})%>

        <!-- Pagination -->
        <div class="container mt-4">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
              <% if (hasPreviousPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>&searchData=<%= searchData %>"><%= previousPage %></a>
              </li>
              <% } %>
              <li class="page-item active">
                <a class="page-link" href="?page=<%= currentPage %>&searchData=<%= searchData %>"><%= currentPage %></a>
              </li>
              <% if (hasNextPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= nextPage %>&searchData=<%= searchData %>"><%= nextPage %></a>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <!-- ... -->

      </div>


    </div>

    <div class="errormsg" style="display: none;">
      Fail to connect database check your network !
    </div>



    <!-- ////////////////////////SCRIPT AREA/////////////////////////////// -->

    <!-- more orderdetails req -->
    <script>
      function orderdetails(id) {
        window.location.href = `/admin/orderdetails?id=${id}`

      }
    </script>

    <!-- status update  -->
    <script>
      function statusUpdate(id) {
        fetch(`/admin/ordermanagement?id=${id}`, {
            method: 'PATCH',
            headers: {
              'Content-Type': 'application/json'
            },
          })
          .then(response => response.json())
          .then(data => {
            if (data.status) {
              document.querySelector(".rotate_new" + id).style.display = "none"
              if (data.totalCheckedOrders === 0) {
                document.querySelector(".new_order_count").textContent = 0;
              } else {
                document.querySelector(".new_order_count").textContent = data.totalCheckedOrders - 1;
              }

              if (data.orderStatus == "Shipped") {
                document.querySelector(".order_status_text" + id).textContent = data.orderStatus;
                document.querySelector(".order_status_text" + id).style.color = "rgb(196, 238, 133)";
                document.querySelector(".status_circle" + id).style.borderColor = "rgb(196, 238, 133)";
              } else if (data.orderStatus == "Out For Delivery") {
                document.querySelector(".order_status_text" + id).textContent = data.orderStatus;
                document.querySelector(".order_status_text" + id).style.color = "rgb(171, 220, 88);";
                document.querySelector(".status_circle" + id).style.borderColor = "rgb(171, 220, 88);";

              } else if (data.orderStatus == "Delivered") {
                document.querySelector(".order_status_text" + id).textContent = data.orderStatus;
                document.querySelector(".order_status_text" + id).style.color = "rgb(82, 197, 114)";
                document.querySelector(".status_circle" + id).style.borderColor = "rgb(82, 197, 114)";
                document.querySelector(".img_up_arrow" + id).style.display = "none";
              }
            } else {
              alert(data.msg)
            }

          })
          .catch((error) => {
            console.error('Error:', error);
          });
      }
    </script>
    <!-- _____________  -->



    <!--          ERROR MSG         -->
    <script>
      function errorMsg() {
        document.querySelector('.errormsg').textContent = data.message;
        document.querySelector('.errormsg').style.display = "block";
        document.querySelector('.errormsg').style.animationPlayState = 'running';

        setTimeout(function() {
          document.querySelector('.errormsg').style.animationPlayState = 'paused';
          document.querySelector('.errormsg').style.animationName = "hide"
          document.querySelector('.errormsg').style.animationPlayState = 'running';
          setTimeout(() => {
            window.location.reload()
          }, 150);
        }, 2000);
      }
    </script>
    <!--           _______          -->

    <!--        copy of id  -->
    <script>
      function copyToClipboard() {
        var orderID = document.getElementById("orderID").innerText;
        navigator.clipboard.writeText(orderID).then(function() {
          console.log('Order ID copied to clipboard');
        }).catch(function(err) {
          console.error('Could not copy text: ', err);
        });
      }
    </script>
    <!-- __________________ -->



</body>

</html>