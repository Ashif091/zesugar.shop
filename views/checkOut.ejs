  <style>
    #navbar {
      background-color: rgb(72, 20, 44);
      padding: 30px 0 0 60px;
      font-weight: bold;
      position: fixed;
      z-index: 200000;
      width: 100%;
      height: 60px;

    }

    .data_visible_div {
      position: fixed;
      top: 7.5rem;
      height: 14rem;
    }
  </style>


